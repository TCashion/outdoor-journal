<%- include ../partials/header.ejs %>

<div class="fluid-container show-container my-5 py-5">
    <div class="row w-100">
        <div class="col-sm-6">
            <div class="card w-100 my-3">
                <div class="card-body">
                    <h5 class="card-title"><%= trip.title %></h5>
                    <p class="card-text"><%= trip.description %></p>
                    <p class="card-text">
                            <%= trip.startDate.toLocaleString([], timeOptionsOne) %> 
                            - 
                            <% if (trip.endDate) { %>
                                <%= trip.endDate.toLocaleString([], timeOptionsOne); %>
                            <% } else { %>
                                Present
                            <% }; %>
                    </p>
                    <% if (trip.loggerId.equals(user._id)) { %>
                        <a href="#" class="btn btn-danger float-right">DELETE</a>
                    <% } %>
                </div>
            </div>
            <hr>
            <div class="card w-100 my-3">
                <div class="card-header">
                Animals
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Cras justo odio</li>
                    <li class="list-group-item">Dapibus ac facilisis in</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
            </div>
            <hr>
        </div>
        <div class="col-sm-6">   
            <% if (trip.loggerId.equals(user._id)) { %>
                <hr>
                <form method="POST" action="/trips/<%= trip._id %>/logs">
                    <div class="form-group">
                        <label for="new-log-form">New log:</label>
                        <textarea class="form-control" id="new-log-form" rows="3" name="body"></textarea>
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>
                </form> 
                <hr>
            <% } %>
            <% if (trip.logs.length) { %>
                <% trip.logs.forEach(function(log) { %>
                    <div class="card w-100 my-3">
                        <div class="card-header">
                            <%= log.date.toLocaleString([], timeOptionsTwo) %>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <p class="mb-0">
                                    <%= log.body %>
                                </p>
                            </li>
                        </ul>
                        <div class="log-supplementals">
                            <form action="/trips/<%= trip._id %>/logs/<%= log._id %>/likes" method="POST">
                                <button class="btn btn-primary btn-likes m-3">Likes: <%= log.likes.length %></button>
                            </form>
                            <% if (trip.loggerId.equals(user._id)) { %>
                                <form action="/logs/<%= log._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger m-3">DELETE</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                    <p class="mb-0">
                        No logs entered yet. Use the form above to enter your first log. 
                    </p>
            <% }; %>
        </div>
    </div>
    <div class="row w-100">
        <div class="col-12">
            <hr class="mt-0">
            <% if (trip.comments.length) { %>
                <% trip.comments.forEach(function(comment) { %>
                    <div class="card my-3 w-100">
                        <div class="card-header">
                            <%= comment.date.toLocaleString([], timeOptionsTwo) %>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <h6>
                                    <strong><%= comment.commentorName %></strong>
                                </h6>
                                <p class="mb-0">
                                    <br>
                                    <%= comment.body %>
                                </p>
                            </li>
                        </ul>
                        <div class="col-12 px-0 d-flex">
                            <form action="/trips/<%= trip._id %>/comments/<%= comment._id %>/likes" method="POST">
                                <button class="btn btn-primary btn-likes m-3">Likes: <%= comment.likes.length %></button>
                            </form>
                            <% if (comment.commentorId.equals(user._id)) { %>
                                <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger m-3">DELETE</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
                <form class="w-100 my-3" action="/trips/<%= trip._id %>/comments" method="POST">
                    <label for="new-comment-form">Add comment:</label>
                    <textarea class="form-control" id="new-comment-form" rows="3" name="body"></textarea>
                    <button type="submit" class="btn btn-primary mt-3">Add Comment</button>
                </form>
            <% } else { %> 
                <form class="w-100 my-3" action="/trips/<%= trip._id %>/comments" method="POST">
                    <label for="first-comment-form">Be the first to comment:</label>
                    <textarea class="form-control" id="first-comment-form" rows="3" name="body"></textarea>
                    <button type="submit" class="btn btn-primary mt-3">Add Comment</button>
                </form>
            <% } %>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>